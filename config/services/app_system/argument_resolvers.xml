<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                class="BitBag\ShopwareAppSkeleton\AppSystem\ArgumentResolver\ClientResolver"
                id="bitbag.shopware_app_skeleton.app_system.argument_resolver.client_resolver"
        >
            <argument type="service" id="bitbag.shopware_app_skeleton.repository.shop_repository"/>
            <argument type="service" id="bitbag.shopware_app_skeleton.app_system.authenticator.authenticator"/>
            <argument type="service" id="bitbag.shopware_app_skeleton.app_system.resolver.credentials_resolver"/>

            <tag name="controller.argument_value_resolver"/>
        </service>

        <service class="BitBag\ShopwareAppSkeleton\AppSystem\ArgumentResolver\EventResolver"
                 id="bitbag.shopware_app_skeleton.app_system.argument_resolver.event_resolver"
        >
            <argument type="service" id="bitbag.shopware_app_skeleton.repository.shop_repository"/>
            <argument type="service" id="bitbag.shopware_app_skeleton.app_system.authenticator.authenticator"/>

            <tag name="controller.argument_value_resolver"/>
        </service>
    </services>
</container>
