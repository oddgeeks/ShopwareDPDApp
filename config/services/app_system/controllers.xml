<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\ShopwareDpdApp\AppSystem\Controller\AppLifecycleEventController"
                 id="bitbag.shopware_dpd_app.app_system.controller.app_lifecycle_event_controller"
        >
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="bitbag.shopware_dpd_app.app_system.factory.lifecycle_event.lifecycle_event_factory"/>

            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\ShopwareDpdApp\AppSystem\Controller\ConfirmationController"
                 id="bitbag.shopware_skeleton_app.app_system.controller.confirmation_controller"
        >
            <argument type="service" id="bitbag.shopware_dpd_app.app_system.authenticator.authenticator"/>
            <argument type="service" id="bitbag.shopware_dpd_app.repository.shop_repository"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="validator"/>

            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\ShopwareDpdApp\AppSystem\Controller\RegistrationController"
                 id="bitbag.shopware_dpd_app.app_system.controller.registration_controller"
        >
            <argument type="service" id="bitbag.shopware_dpd_app.app_system.authenticator.authenticator"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="bitbag.shopware_dpd_app.repository.shop_repository"/>
            <argument type="service" id="router"/>
            <argument type="string" key="$appName">%env(APP_NAME)%</argument>
            <argument type="string" key="$appSecret">%env(APP_SECRET)%</argument>

            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
